.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.95) 100%);
  backdrop-filter: blur(20rpx);
  display: flex;
  padding: 0 20rpx;
  box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.tab-bar-border {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(0, 0, 0, 0.1) 50%, transparent 100%);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 10rpx 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tab-bar-item--active {
  transform: translateY(-4rpx);
}

.tab-bar-icon-wrapper {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
}

.tab-bar-icon-text {
  font-size: 40rpx;
  color: #7A7E83;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 2;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
}

.tab-bar-icon-text--active {
  transform: scale(1.1);
  color: #667eea;
}

.tab-bar-icon-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  transform: translate(-50%, -50%) scale(0);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  opacity: 0;
  z-index: 1;
}

.tab-bar-icon-bg--active {
  transform: translate(-50%, -50%) scale(1);
  opacity: 0.15;
}

.tab-bar-text {
  font-size: 20rpx;
  color: #7A7E83;
  font-weight: 400;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  line-height: 1.2;
}

.tab-bar-text--active {
  color: #667eea;
  font-weight: 600;
  transform: scale(1.05);
}

.tab-bar-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 2rpx;
  transform: translateX(-50%);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tab-bar-indicator--active {
  width: 40rpx;
}

/* 点击动画效果 */
.tab-bar-item:active {
  transform: translateY(-2rpx) scale(0.95);
}

.tab-bar-item--active:active {
  transform: translateY(-6rpx) scale(0.95);
}

/* 适配安全区域 */
@supports (bottom: env(safe-area-inset-bottom)) {
  .tab-bar {
    padding-bottom: env(safe-area-inset-bottom);
    height: calc(120rpx + env(safe-area-inset-bottom));
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .tab-bar {
    background: linear-gradient(180deg, rgba(28, 28, 30, 0.9) 0%, rgba(28, 28, 30, 0.95) 100%);
  }
  
  .tab-bar-text {
    color: #8E8E93;
  }
  
  .tab-bar-text--active {
    color: #667eea;
  }
  
  .tab-bar-border {
    background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.1) 50%, transparent 100%);
  }
}

/* 动画关键帧 */
@keyframes bounce {
  0%, 20%, 53%, 80%, 100% {
    transform: translate3d(0, 0, 0);
  }
  40%, 43% {
    transform: translate3d(0, -6rpx, 0);
  }
  70% {
    transform: translate3d(0, -3rpx, 0);
  }
  90% {
    transform: translate3d(0, -1rpx, 0);
  }
}

.tab-bar-item--bounce {
  animation: bounce 0.6s ease-in-out;
}