/* Vant Weapp inspired clean tab bar */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  background: #fff;
  display: flex;
  border-top: 1rpx solid #ebedf0;
  z-index: 1000;
}

.tab-bar-border {
  display: none;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0 6rpx 0;
  position: relative;
}

.tab-bar-icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.tab-bar-icon-text {
  font-size: 44rpx;
  color: #646566;
  line-height: 1;
  transition: color 0.2s;
}

.tab-bar-icon-text--active {
  color: #1989fa;
}

.tab-bar-text {
  font-size: 24rpx;
  color: #646566;
  line-height: 1;
  font-weight: 400;
  transition: color 0.2s;
}

.tab-bar-text--active {
  color: #1989fa;
}

.tab-bar-indicator {
  display: none;
}

/* Safe area support */
@supports (bottom: env(safe-area-inset-bottom)) {
  .tab-bar {
    padding-bottom: env(safe-area-inset-bottom);
    height: calc(98rpx + env(safe-area-inset-bottom));
  }
}

/* 点击动画效果 */
.tab-bar-item:active {
  transform: translateY(-2rpx) scale(0.95);
}

.tab-bar-item--active:active {
  transform: translateY(-6rpx) scale(0.95);
}

/* 适配安全区域 */
@supports (bottom: env(safe-area-inset-bottom)) {
  .tab-bar {
    padding-bottom: env(safe-area-inset-bottom);
    height: calc(120rpx + env(safe-area-inset-bottom));
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .tab-bar {
    background: linear-gradient(180deg, rgba(28, 28, 30, 0.9) 0%, rgba(28, 28, 30, 0.95) 100%);
  }
  
  .tab-bar-text {
    color: #8E8E93;
  }
  
  .tab-bar-text--active {
    color: #667eea;
  }
  
  .tab-bar-border {
    background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.1) 50%, transparent 100%);
  }
}

/* 动画关键帧 */
@keyframes bounce {
  0%, 20%, 53%, 80%, 100% {
    transform: translate3d(0, 0, 0);
  }
  40%, 43% {
    transform: translate3d(0, -6rpx, 0);
  }
  70% {
    transform: translate3d(0, -3rpx, 0);
  }
  90% {
    transform: translate3d(0, -1rpx, 0);
  }
}

.tab-bar-item--bounce {
  animation: bounce 0.6s ease-in-out;
}