/* miniprogram/pages/candidate/schedule/schedule.wxss */

.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* Loading Overlay */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Header */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-bottom: 2rpx solid #f0f0f0;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.refresh-btn {
  padding: 16rpx;
  border-radius: 8rpx;
  background: #f8f9fa;
}

.refresh-icon {
  width: 32rpx;
  height: 32rpx;
}

/* Filter Tabs */
.filter-tabs {
  display: flex;
  background: #fff;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  position: relative;
  cursor: pointer;
}

.tab-item.active {
  color: #1890ff;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

.tab-label {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.tab-count {
  font-size: 24rpx;
  color: #999;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  min-width: 32rpx;
  text-align: center;
}

.tab-item.active .tab-count {
  background: #e6f7ff;
  color: #1890ff;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.refresh-btn-empty {
  padding: 20rpx 40rpx;
  background: #1890ff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* Exam List */
.exam-list {
  padding: 20rpx 30rpx;
}

.exam-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.exam-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* Exam Header */
.exam-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.exam-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
  line-height: 1.4;
}

.exam-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
}

/* Exam Info */
.exam-info {
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
  opacity: 0.6;
}

.info-text {
  font-size: 26rpx;
  color: #666;
}

/* Time Remaining */
.time-remaining {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #fff7e6;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
}

.remaining-label {
  font-size: 24rpx;
  color: #fa8c16;
  margin-right: 12rpx;
}

.remaining-time {
  font-size: 24rpx;
  font-weight: bold;
  color: #fa8c16;
}

/* Score Display */
.score-display {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #f6ffed;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
}

.score-label {
  font-size: 24rpx;
  color: #52c41a;
  margin-right: 12rpx;
}

.score-value {
  font-size: 24rpx;
  font-weight: bold;
  color: #52c41a;
}

/* Exam Actions */
.exam-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  background: #fff;
  font-size: 24rpx;
  color: #666;
}

.reminder-btn {
  border-color: #faad14;
  color: #faad14;
}

.detail-btn {
  border-color: #1890ff;
  color: #1890ff;
}

.btn-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

/* Quick Actions */
.quick-actions {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  z-index: 100;
}

.quick-action-btn {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #1890ff;
  color: #fff;
  border: none;
  border-radius: 50rpx;
  font-size: 26rpx;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  filter: brightness(0) invert(1);
}

.action-text {
  font-weight: 500;
}

/* Modal Styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.exam-detail-modal {
  background: #fff;
  border-radius: 16rpx;
  width: 100%;
  max-width: 700rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  cursor: pointer;
}

.modal-content {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

/* Detail Sections */
.detail-section {
  margin-bottom: 40rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.detail-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #666;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* Schedule Info */
.schedule-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.schedule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.schedule-label {
  font-size: 26rpx;
  color: #666;
}

.schedule-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* Requirements */
.requirements-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.requirement-item {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  background: #f6ffed;
  border-radius: 8rpx;
}

.check-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
  filter: hue-rotate(90deg);
}

.requirement-text {
  font-size: 26rpx;
  color: #333;
}

/* Description */
.description-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* Result Info */
.result-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: linear-gradient(135deg, #52c41a, #73d13d);
  border-radius: 12rpx;
  color: #fff;
}

.result-score {
  display: flex;
  align-items: baseline;
}

.score-number {
  font-size: 48rpx;
  font-weight: bold;
}

.score-total {
  font-size: 28rpx;
  margin-left: 4rpx;
  opacity: 0.8;
}

.result-grade {
  font-size: 28rpx;
  font-weight: 500;
}

/* Modal Actions */
.modal-actions {
  display: flex;
  gap: 16rpx;
  padding: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  padding: 20rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.modal-btn.reminder-btn {
  background: #faad14;
  color: #fff;
}

.modal-btn.close-btn {
  background: #f5f5f5;
  color: #666;
}

/* Responsive Design */
@media screen and (max-width: 750rpx) {
  .exam-list {
    padding: 20rpx 20rpx;
  }
  
  .exam-card {
    padding: 20rpx;
  }
  
  .detail-grid {
    grid-template-columns: 1fr;
  }
  
  .modal-overlay {
    padding: 20rpx;
  }
}

/* Animation Effects */
.exam-card {
  animation: slideUp 0.6s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.exam-detail-modal {
  animation: modalSlideUp 0.4s ease-out;
}

@keyframes modalSlideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}