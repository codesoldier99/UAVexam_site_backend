/* miniprogram/pages/candidate/profile/profile.wxss */

.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 40rpx;
}

/* Loading Overlay */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Hero Section */
.hero-section {
  position: relative;
  background: #fff;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.hero-bg {
  height: 240rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
}

.hero-bg::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
}

.hero-content {
  position: relative;
  padding: 0 40rpx 40rpx;
  margin-top: -100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.avatar-container {
  position: relative;
  margin-bottom: 24rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  border: 6rpx solid #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.status-dot {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 14rpx;
  border: 4rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.user-info {
  width: 100%;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 26rpx;
  color: #8a8a8a;
  margin-bottom: 16rpx;
}

.user-status {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.status-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #667eea;
}

/* Quick Stats */
.quick-stats {
  display: flex;
  background: #fff;
  margin: 0 24rpx 24rpx;
  border-radius: 20rpx;
  padding: 32rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 16rpx;
  transition: transform 0.2s ease;
}

.stat-item:active {
  transform: scale(0.95);
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.stat-info {
  text-align: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #8a8a8a;
}

/* Info Cards */
.info-card, .action-card, .settings-card {
  background: #fff;
  margin: 0 24rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.card-title {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.edit-btn {
  padding: 12rpx 24rpx;
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.edit-text {
  color: #fff;
}

.edit-actions {
  display: flex;
  gap: 12rpx;
}

.save-btn, .cancel-btn {
  padding: 12rpx 20rpx;
  border: none;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.save-btn {
  background: #52c41a;
  color: #fff;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.card-content {
  padding: 32rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f8f9fa;
}

.info-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.item-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
}

.item-value {
  flex: 1;
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
  text-align: right;
}

.item-input {
  flex: 1;
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  text-align: right;
  transition: all 0.3s ease;
}

.item-input:focus {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

/* Action List */
.action-list {
  padding: 0;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f8f9fa;
  transition: background-color 0.2s ease;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item:active {
  background-color: #f8f9fa;
}

.action-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 40rpx;
  text-align: center;
}

.action-content {
  flex: 1;
}

.action-title {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #8a8a8a;
}

.action-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: 300;
}

/* Settings */
.setting-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f8f9fa;
  transition: background-color 0.2s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background-color: #f8f9fa;
}

.logout-item {
  color: #ff4d4f;
}

.logout-item .setting-text {
  color: #ff4d4f;
}

.setting-icon {
  font-size: 36rpx;
  margin-right: 24rpx;
  width: 36rpx;
  text-align: center;
}

.setting-text {
  flex: 1;
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.setting-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: 300;
}

/* Status Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.status-modal {
  background: #fff;
  border-radius: 20rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 100%;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  cursor: pointer;
  border-radius: 24rpx;
  transition: background-color 0.2s ease;
}

.close-btn:active {
  background-color: #f5f5f5;
}

.modal-content {
  padding: 32rpx;
}

.current-status {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-indicator {
  width: 24rpx;
  height: 24rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
}

.status-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.status-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* Responsive Design */
@media screen and (max-width: 750rpx) {
  .hero-content {
    padding: 0 30rpx 30rpx;
  }
  
  .quick-stats {
    margin: 0 20rpx 20rpx;
    padding: 24rpx 16rpx;
  }
  
  .stat-item {
    padding: 0 12rpx;
  }
  
  .stat-number {
    font-size: 32rpx;
  }
  
  .info-card, .action-card, .settings-card {
    margin: 0 20rpx 20rpx;
  }
  
  .card-header, .card-content {
    padding: 24rpx;
  }
  
  .action-item, .setting-item {
    padding: 24rpx;
  }
}

/* Animation Effects */
.hero-section {
  animation: fadeInDown 0.6s ease-out;
}

.quick-stats, .info-card, .action-card, .settings-card {
  animation: slideUp 0.6s ease-out;
}

.quick-stats {
  animation-delay: 0.1s;
}

.info-card:nth-child(3) {
  animation-delay: 0.2s;
}

.info-card:nth-child(4) {
  animation-delay: 0.3s;
}

.action-card {
  animation-delay: 0.4s;
}

.settings-card {
  animation-delay: 0.5s;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Hover Effects for Better Interaction */
.stat-item:hover {
  transform: translateY(-4rpx);
}

.action-item:hover, .setting-item:hover {
  background-color: #f8f9fa;
}

.edit-btn:hover {
  background: #5a6fd8;
}

.save-btn:hover {
  background: #49b018;
}

/* Dark Mode Support (Optional) */
@media (prefers-color-scheme: dark) {
  .container {
    background: #1a1a1a;
  }
  
  .info-card, .action-card, .settings-card, .quick-stats {
    background: #2a2a2a;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  }
  
  .user-name, .title-text, .item-value, .action-title, .setting-text {
    color: #ffffff;
  }
  
  .user-id, .stat-label, .item-label, .action-desc {
    color: #cccccc;
  }
}
