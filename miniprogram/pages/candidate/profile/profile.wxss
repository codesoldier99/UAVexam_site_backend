/* miniprogram/pages/candidate/profile/profile.wxss */

.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* Loading Overlay */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Profile Header */
.profile-header {
  position: relative;
  background: #fff;
  margin-bottom: 20rpx;
}

.header-bg {
  height: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.profile-content {
  position: relative;
  padding: 0 40rpx 40rpx;
  margin-top: -80rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-wrapper {
  position: relative;
  cursor: pointer;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 6rpx solid #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.avatar-wrapper:active .avatar-overlay {
  opacity: 1;
}

.camera-icon {
  width: 48rpx;
  height: 48rpx;
  filter: brightness(0) invert(1);
}

.status-badge {
  margin-top: 20rpx;
  padding: 8rpx 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.status-text {
  font-size: 24rpx;
  font-weight: 600;
}

.basic-info {
  text-align: center;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.student-id {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.department {
  font-size: 26rpx;
  color: #999;
}

/* Statistics Section */
.stats-section {
  display: flex;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stats-card {
  flex: 1;
  text-align: center;
  padding: 0 20rpx;
}

.stats-card:not(:last-child) {
  border-right: 2rpx solid #f0f0f0;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* Information Section */
.info-section {
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.edit-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #1890ff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.edit-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  filter: brightness(0) invert(1);
}

.edit-actions {
  display: flex;
  gap: 16rpx;
}

.save-btn, .cancel-btn {
  padding: 12rpx 24rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.save-btn {
  background: #52c41a;
  color: #fff;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.info-form {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.input-field {
  padding: 20rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  transition: border-color 0.3s ease;
}

.input-field:focus {
  border-color: #1890ff;
  background: #fff;
}

.field-value {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  min-height: 28rpx;
}

/* Actions Section */
.actions-section {
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item:active {
  background-color: #f8f9fa;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.action-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

/* Logout Section */
.logout-section {
  padding: 0 30rpx;
}

.logout-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: #ff4d4f;
  color: #fff;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.3);
}

.logout-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  filter: brightness(0) invert(1);
}

/* Status Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.status-modal {
  background: #fff;
  border-radius: 16rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 100%;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  cursor: pointer;
}

.modal-content {
  padding: 30rpx;
}

.current-status {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-indicator {
  width: 24rpx;
  height: 24rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
}

.status-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.status-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* Responsive Design */
@media screen and (max-width: 750rpx) {
  .profile-content {
    padding: 0 30rpx 30rpx;
  }
  
  .stats-section {
    padding: 20rpx 15rpx;
  }
  
  .stats-card {
    padding: 0 15rpx;
  }
  
  .stat-number {
    font-size: 40rpx;
  }
  
  .info-section, .actions-section {
    margin: 0 20rpx 20rpx;
    padding: 20rpx;
  }
}

/* Animation Effects */
.info-section, .actions-section, .stats-section {
  animation: slideUp 0.6s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.profile-header {
  animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}