/* miniprogram/pages/candidate/dashboard/dashboard.wxss */

.dashboard-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 100rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.dashboard-content {
  padding: 40rpx 30rpx;
}

/* Header Section */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-text {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.user-details {
  flex: 1;
}

.user-name {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-status {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.profile-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.profile-btn .iconfont {
  color: white;
  font-size: 28rpx;
}

/* Stats Section */
.stats-section {
  margin-bottom: 40rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-card {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stat-number {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 20rpx;
}

/* Section Styles */
.section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.section-more {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.1);
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.empty-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  display: block;
}

.empty-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* Exam Cards */
.exam-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.exam-card {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.exam-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.exam-name {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  flex: 1;
  margin-right: 20rpx;
}

.exam-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.status-pending {
  background: rgba(255, 193, 7, 0.2);
  color: #ffc107;
  border: 1rpx solid rgba(255, 193, 7, 0.3);
}

.status-ongoing {
  background: rgba(0, 123, 255, 0.2);
  color: #007bff;
  border: 1rpx solid rgba(0, 123, 255, 0.3);
}

.status-completed {
  background: rgba(40, 167, 69, 0.2);
  color: #28a745;
  border: 1rpx solid rgba(40, 167, 69, 0.3);
}

.status-cancelled {
  background: rgba(220, 53, 69, 0.2);
  color: #dc3545;
  border: 1rpx solid rgba(220, 53, 69, 0.3);
}

.exam-details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.exam-detail-item {
  display: flex;
  align-items: center;
}

.detail-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
  width: 32rpx;
}

.detail-text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 24rpx;
  flex: 1;
}

/* Result Cards */
.results-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-card {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.result-name {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  flex: 1;
  margin-right: 20rpx;
}

.result-score {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.result-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-date {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.result-grade {
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.grade-excellent {
  background: rgba(40, 167, 69, 0.2);
  color: #28a745;
  border: 1rpx solid rgba(40, 167, 69, 0.3);
}

.grade-good {
  background: rgba(0, 123, 255, 0.2);
  color: #007bff;
  border: 1rpx solid rgba(0, 123, 255, 0.3);
}

.grade-pass {
  background: rgba(255, 193, 7, 0.2);
  color: #ffc107;
  border: 1rpx solid rgba(255, 193, 7, 0.3);
}

.grade-fail {
  background: rgba(220, 53, 69, 0.2);
  color: #dc3545;
  border: 1rpx solid rgba(220, 53, 69, 0.3);
}

.result-status {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* Actions Section */
.actions-section {
  margin-top: 40rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.action-item {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.action-text {
  color: white;
  font-size: 24rpx;
  font-weight: 500;
}

/* Responsive Design */
@media (max-width: 750rpx) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 15rpx;
  }
  
  .action-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .dashboard-content {
    padding: 30rpx 20rpx;
  }
}