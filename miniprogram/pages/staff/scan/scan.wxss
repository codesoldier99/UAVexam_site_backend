/* 现代化扫码界面样式 */
.scan-container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
}

/* 顶部状态栏 */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.staff-card {
  display: flex;
  align-items: center;
  flex: 1;
}

.staff-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.avatar-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

.staff-details {
  flex: 1;
}

.staff-name {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 6rpx;
}

.staff-role {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.top-actions {
  display: flex;
  gap: 15rpx;
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-icon:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.3);
}

.action-icon .icon {
  font-size: 28rpx;
}

/* 主扫码区域 */
.main-scan-area {
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.scan-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.scan-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.scan-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

/* 相机预览区域 */
.camera-wrapper {
  position: relative;
  width: 100%;
  height: 600rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: #000;
  margin-bottom: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.3);
}

.camera-preview {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 相机权限申请 */
.camera-permission {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  color: #495057;
}

.permission-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.permission-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #343a40;
}

.permission-desc {
  font-size: 28rpx;
  color: #6c757d;
  margin-bottom: 40rpx;
  text-align: center;
  line-height: 1.5;
}

.permission-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.permission-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 扫描框架 */
.scan-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
}

.scan-box {
  position: relative;
  width: 400rpx;
  height: 400rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  background: transparent;
}

.corner {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #667eea;
}

.corner-tl {
  top: -6rpx;
  left: -6rpx;
  border-right: none;
  border-bottom: none;
  border-top-left-radius: 16rpx;
}

.corner-tr {
  top: -6rpx;
  right: -6rpx;
  border-left: none;
  border-bottom: none;
  border-top-right-radius: 16rpx;
}

.corner-bl {
  bottom: -6rpx;
  left: -6rpx;
  border-right: none;
  border-top: none;
  border-bottom-left-radius: 16rpx;
}

.corner-br {
  bottom: -6rpx;
  right: -6rpx;
  border-left: none;
  border-top: none;
  border-bottom-right-radius: 16rpx;
}

.scan-line {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #667eea, transparent);
  border-radius: 2rpx;
  animation: scanMove 2s linear infinite;
}

.scan-line.scanning {
  animation-duration: 1.5s;
}

@keyframes scanMove {
  0% {
    top: 0;
    opacity: 1;
  }
  50% {
    opacity: 1;
  }
  100% {
    top: calc(100% - 4rpx);
    opacity: 0;
  }
}

.scan-tip {
  margin-top: 40rpx;
  font-size: 28rpx;
  color: white;
  text-align: center;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
}

/* 扫码按钮 */
.scan-action {
  display: flex;
  justify-content: center;
}

.scan-button {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #2ed573 0%, #17a2b8 100%);
  border: none;
  box-shadow: 0 12rpx 48rpx rgba(46, 213, 115, 0.4);
  transition: all 0.3s ease;
  overflow: hidden;
}

.scan-button:active {
  transform: scale(0.95);
}

.scan-button.scanning {
  background: linear-gradient(135deg, #ffa502 0%, #ff6348 100%);
  box-shadow: 0 12rpx 48rpx rgba(255, 165, 2, 0.4);
  animation: pulse 2s infinite;
}

.scan-button.processing {
  background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
  box-shadow: 0 12rpx 48rpx rgba(108, 117, 125, 0.4);
}

.button-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: white;
}

.button-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.button-text {
  font-size: 24rpx;
  font-weight: bold;
}

.button-ripple {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
}

.scan-button:active .button-ripple {
  width: 300rpx;
  height: 300rpx;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 快捷功能区 */
.quick-actions {
  background: white;
  margin: 0 30rpx 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.action-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.action-header:active {
  background: #e9ecef;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #343a40;
}

.header-arrow {
  font-size: 24rpx;
  color: #6c757d;
  transition: transform 0.3s ease;
}

.header-arrow.expanded {
  transform: rotate(180deg);
}

.action-content {
  overflow: hidden;
  transition: all 0.3s ease;
}

.action-content.hide {
  max-height: 0;
  opacity: 0;
}

.action-content.show {
  max-height: 500rpx;
  opacity: 1;
}

/* 手动输入区域 */
.manual-input-section {
  padding: 30rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.input-wrapper {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.manual-input {
  flex: 1;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.manual-input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.input-confirm-btn {
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.input-confirm-btn:active {
  transform: translateY(2rpx);
}

.input-confirm-btn:disabled {
  background: #6c757d;
  opacity: 0.6;
}

/* 快速测试区域 */
.quick-test-section {
  padding: 30rpx;
}

.test-label {
  font-size: 28rpx;
  color: #6c757d;
  margin-bottom: 20rpx;
}

.test-buttons {
  display: flex;
  gap: 15rpx;
}

.test-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border: 2rpx solid #dee2e6;
  border-radius: 12rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.test-btn:active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  transform: translateY(2rpx);
}

.test-name {
  font-weight: bold;
  margin-bottom: 6rpx;
}

.test-id {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 统计卡片 */
.stats-card {
  background: white;
  margin: 0 30rpx 20rpx;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #343a40;
}

.card-date {
  font-size: 24rpx;
  color: #6c757d;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 24rpx 16rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.stat-item:active {
  background: #e9ecef;
  transform: translateY(-2rpx);
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.stat-number.primary {
  color: #667eea;
}

.stat-number.success {
  color: #2ed573;
}

.stat-number.error {
  color: #ff4757;
}

.stat-label {
  font-size: 24rpx;
  color: #6c757d;
}

/* 最近记录 */
.recent-records {
  background: white;
  margin: 0 30rpx 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.records-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.records-header:active {
  background: #e9ecef;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.record-count {
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
}

.records-content {
  overflow: hidden;
  transition: all 0.3s ease;
}

.records-content.hide {
  max-height: 0;
  opacity: 0;
}

.records-content.show {
  max-height: 800rpx;
  opacity: 1;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f8f9fa;
  transition: all 0.3s ease;
}

.record-item:active {
  background: #f8f9fa;
}

.record-item:last-child {
  border-bottom: none;
}

.record-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.record-info {
  flex: 1;
}

.record-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #343a40;
  margin-bottom: 6rpx;
}

.record-time {
  font-size: 24rpx;
  color: #6c757d;
}

.record-status {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.record-status.success {
  background: rgba(46, 213, 115, 0.1);
  color: #2ed573;
}

.record-status.failed {
  background: rgba(255, 71, 87, 0.1);
  color: #ff4757;
}

.view-all-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 24rpx;
  background: #f8f9fa;
  color: #667eea;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.view-all-btn:active {
  background: #e9ecef;
}

.btn-arrow {
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 30rpx;
  margin: 0 30rpx 20rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #343a40;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #6c757d;
  line-height: 1.5;
}

/* 扫描结果弹窗 */
.result-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.result-modal {
  width: 600rpx;
  max-width: 90vw;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

.result-status {
  text-align: center;
  padding: 50rpx 30rpx 30rpx;
}

.status-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  font-size: 60rpx;
  color: white;
}

.status-icon.success {
  background: linear-gradient(135deg, #2ed573 0%, #17a2b8 100%);
}

.status-icon.error {
  background: linear-gradient(135deg, #ff4757 0%, #ff3742 100%);
}

.status-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #343a40;
  margin-bottom: 16rpx;
}

.status-message {
  font-size: 28rpx;
  color: #6c757d;
  line-height: 1.5;
}

.result-details {
  padding: 0 30rpx 30rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f9fa;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #6c757d;
}

.detail-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #343a40;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}

.result-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background: #f8f9fa;
}

.result-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.result-btn.secondary {
  background: #6c757d;
  color: white;
}

.result-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.result-btn:active {
  transform: translateY(2rpx);
}

/* 全局加载遮罩 */
.global-loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-spinner {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.spinner-ring {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 6rpx solid transparent;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.spinner-ring:nth-child(2) {
  width: 80%;
  height: 80%;
  top: 10%;
  left: 10%;
  border-top-color: #2ed573;
  animation-duration: 1.5s;
  animation-direction: reverse;
}

.spinner-ring:nth-child(3) {
  width: 60%;
  height: 60%;
  top: 20%;
  left: 20%;
  border-top-color: #ffa502;
  animation-duration: 2s;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: white;
  text-align: center;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(100rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .scan-title {
    font-size: 40rpx;
  }
  
  .camera-wrapper {
    height: 500rpx;
  }
  
  .scan-box {
    width: 300rpx;
    height: 300rpx;
  }
  
  .scan-button {
    width: 160rpx;
    height: 160rpx;
  }
  
  .button-icon {
    font-size: 40rpx;
  }
  
  .button-text {
    font-size: 22rpx;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 15rpx;
  }
  
  .test-buttons {
    flex-direction: column;
    gap: 10rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .quick-actions,
  .stats-card,
  .recent-records,
  .empty-state,
  .result-modal {
    background: #2c3e50;
    color: white;
  }
  
  .action-header,
  .records-header,
  .result-actions {
    background: #34495e;
  }
  
  .manual-input {
    background: #34495e;
    border-color: #495057;
    color: white;
  }
  
  .stat-item,
  .test-btn {
    background: #34495e;
    border-color: #495057;
  }
  
  .header-title,
  .card-title,
  .status-title,
  .record-name,
  .empty-title,
  .detail-value {
    color: white;
  }
  
  .header-arrow,
  .card-date,
  .stat-label,
  .record-time,
  .empty-desc,
  .detail-label,
  .status-message {
    color: #bdc3c7;
  }
}