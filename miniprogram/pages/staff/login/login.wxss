/* miniprogram/pages/staff/login/login.wxss */

/* 主容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding: 40rpx 32rpx;
  box-sizing: border-box;
}

/* 背景装饰元素 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: 10%;
  right: -50rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 60%;
  left: -30rpx;
  animation-delay: 2s;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 30%;
  left: 20%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20rpx) rotate(180deg); }
}

/* 头部区域 */
.header {
  position: relative;
  z-index: 1;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  animation: slideDown 0.8s ease-out;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-icon {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.logo-text {
  font-size: 60rpx;
}

.system-info {
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 400;
}

/* 登录卡片 */
.login-card {
  position: relative;
  z-index: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 0;
  margin-bottom: 40rpx;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  animation: slideUp 0.8s ease-out 0.2s both;
}

.card-header {
  padding: 48rpx 40rpx 32rpx;
  text-align: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.welcome-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.welcome-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 表单容器 */
.form-container {
  padding: 32rpx 40rpx 48rpx;
}

/* 输入组 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.input-wrapper:focus-within {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 8rpx rgba(102, 126, 234, 0.1);
  transform: translateY(-2rpx);
}

.input-wrapper.has-value {
  border-color: #667eea;
  background: #ffffff;
}

.input-icon {
  font-size: 32rpx;
  margin: 0 20rpx 0 24rpx;
  opacity: 0.7;
  transition: opacity 0.3s ease;
}

.input-wrapper:focus-within .input-icon {
  opacity: 1;
}

.input-field {
  flex: 1;
  height: 96rpx;
  font-size: 32rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
  line-height: 1.4;
}

.input-field::placeholder {
  color: #999;
  font-weight: 400;
}

.password-toggle {
  padding: 20rpx 24rpx;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.password-toggle:active {
  transform: scale(0.95);
}

.toggle-icon {
  font-size: 32rpx;
  opacity: 0.7;
}

/* 记住我区域 */
.remember-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding: 0 8rpx;
}

.checkbox-wrapper {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.custom-checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  transition: all 0.3s ease;
  background: #fff;
}

.custom-checkbox.checked {
  background: #667eea;
  border-color: #667eea;
}

.check-icon {
  color: #ffffff;
  font-size: 20rpx;
  font-weight: bold;
}

.checkbox-label {
  font-size: 28rpx;
  color: #666;
  user-select: none;
}

.forgot-link {
  cursor: pointer;
}

.link-text {
  font-size: 26rpx;
  color: #667eea;
  text-decoration: none;
  transition: color 0.3s ease;
}

.link-text:active {
  color: #5a67d8;
}

/* 登录按钮 */
.login-button {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.login-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.login-button:not(.loading):active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.login-button:not(.loading):active::before {
  left: 100%;
}

.login-button.loading {
  opacity: 0.8;
  cursor: not-allowed;
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

.button-text {
  font-size: 32rpx;
  font-weight: 600;
}

/* 快捷操作 */
.quick-actions {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
  animation: fadeIn 0.8s ease-out 0.4s both;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

.action-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 32rpx;
}

/* 底部信息 */
.footer-info {
  position: relative;
  z-index: 1;
  margin-top: auto;
  text-align: center;
  padding-top: 40rpx;
  animation: fadeIn 0.8s ease-out 0.6s both;
}

.version-info {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 8rpx;
}

.copyright {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 成功动画覆盖层 */
.success-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease-out;
}

.success-content {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  animation: bounceIn 0.5s ease-out;
}

.success-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  animation: pulse 1s ease-in-out infinite;
}

.success-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #666;
}

/* 动画定义 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 32rpx 24rpx;
  }
  
  .login-card {
    border-radius: 24rpx;
  }
  
  .form-container {
    padding: 24rpx 32rpx 40rpx;
  }
  
  .card-header {
    padding: 40rpx 32rpx 24rpx;
  }
  
  .title {
    font-size: 44rpx;
  }
  
  .welcome-text {
    font-size: 32rpx;
  }
  
  .input-field {
    font-size: 30rpx;
  }
  
  .login-button {
    font-size: 30rpx;
    height: 96rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .login-card {
    background: rgba(30, 30, 30, 0.95);
  }
  
  .welcome-text {
    color: #ffffff;
  }
  
  .welcome-desc {
    color: #cccccc;
  }
  
  .input-label {
    color: #ffffff;
  }
  
  .input-wrapper {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
  }
  
  .input-field {
    color: #ffffff;
  }
  
  .checkbox-label {
    color: #cccccc;
  }
}
